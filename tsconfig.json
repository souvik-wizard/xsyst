{
  "compilerOptions": {
    "target": "ES6", // Output JavaScript target version
    "module": "commonjs", // Use CommonJS module system (required for Node.js)
    "lib": ["ES6"], // Specify the libraries to include in the compilation
    "outDir": "./dist", // Output directory for the compiled JavaScript files
    "rootDir": "./", // Root directory of TypeScript files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip checking types of all declaration files (.d.ts)
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in import paths
    "moduleResolution": "node", // Resolve modules in a Node.js environment
    "resolveJsonModule": true, // Allows importing .json files
    "declaration": true, // Generates .d.ts files for TypeScript declarations
    "sourceMap": true // Generate source maps for debugging
  },
  "include": [
    "./**/*.ts" // Include all .ts files in the root directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules directory from compilation
    "dist" // Exclude output directory from the source files
  ]
}
